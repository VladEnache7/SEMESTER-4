@{
    ViewData["Title"] = "Profile Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="~/dude.png" class="img-thumbnail" alt="Profile Image"/>
            <h2>@ViewBag.UserName</h2>
            <p>@ViewBag.Email</p>
            <p>+40 (756) 883 187</p>
            <a href="https://www.linkedin.com/">
                <img src="~/linkdin.png" height="30" width="25"/>
            </a>
            <a href="https://github.com/">
                <img src="~/github.png" height="30" width="25"/>
            </a>
        </div>
        <div class="col-md-8">
            <h2>@ViewBag.Summary</h2>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-8">
                    <h3>Education</h3>
                    <a href="@Url.Action("Index", "Educations")" class="btn btn-primary">See and edit your Educations</a>
                    @* @Html.PartialAsync("~/Views/Educations/Index.cshtml") *@
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h3>Experience</h3>
                    <a href="@Url.Action("Index", "WorkExperiences")" class="btn btn-primary">See and edit your WorkExperiences</a>
                    <!-- Experience items will be populated here -->
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h3>Certifications</h3>
                    <a href="@Url.Action("Index", "Certificates")" class="btn btn-primary">See and edit your Certificates</a>
                    <!-- Certification items will be populated here -->
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h3>Skills</h3>
                    <a href="@Url.Action("Index", "Skills")" class="btn btn-primary">See and edit your Skills</a>
                    <!-- Skills items will be populated here -->
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h3>Volunteering</h3>
                    <a href="@Url.Action("Index", "Volunteerings")" class="btn btn-primary">See and edit your Volunteerings</a>
                    <!-- Volunteering items will be populated here -->
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Search", "Profile")" class="btn btn-primary">Search</a>
            <a href="@Url.Action("Index", "Notifications")" class="btn btn-primary">Notifications</a>
            <a href="@Url.Action("BecomePremiumMember", "Profile")" class="btn btn-primary">Become Premium Member</a>
            <a href="@Url.Action("Create", "AssessmentTests")" class="btn btn-primary">Create Assessments</a>
            <a href="@Url.Action("TakeAssessments", "Profile")" class="btn btn-primary">Take Assessments</a>
            <a href="@Url.Action("Settings", "Profile")" class="btn btn-primary">Settings</a>
            <a href="@Url.Action("Index", "Projects")" class="btn btn-primary">View Projects</a>
            <a href="@Url.Action("Index", "BussinesCards")" class="btn btn-primary">Business Card</a>
        </div>
    </div>
</div>